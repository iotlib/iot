script.template-switchfunction(type="text/x-custom-template")
    li.list-group-item.clearfix
        .switch
            label
                input#lightswitch(type='checkbox', checked='checked')
                span.slider.round

        span.text-muted.align-middle    {name}
        span.clearfix.pull-right
            button.btn.btn-sm.btn-outline-secondary.btn-edit
                i.fa.fa-pencil.align-middle
            span &nbsp;
            button.btn.btn-sm.btn-outline-danger.btn-remove
                i.fa.fa-trash-o.align-middle


script.template-modal(type="text/x-custom-template")
    #modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modalLabel', aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5#modal-label.modal-title Ready to Leave?
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') ×
                .modal-body
                    | Select "Logout" below if you are ready to end your current session.
                .modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Cancel
                    a.btn.btn-primary(href='/signout') Logout

script.template-functionline(type="text/x-custom-template")
    li.list-group-item
        form
            .form-row.align-items-center
                .form-group.col-12.col-sm-6
                    small.text-muted Function name
                    input.function-name.form-control(type='text' placeholder="Name")

                .form-group.col-6.col-sm-2
                    small.text-muted Pin
                    input.function-pin.form-control(
                    type='tel'
                    placeholder="Pin"
                    onkeypress='return event.charCode >= 48 && event.charCode <= 57'
                    )

                // for now, always digital write
                //.form-group.col-6.col-sm-4
                    small.text-muted Function
                    br
                    select.custom-select
                        option(value='DW' selected) Digital Write
                        option(value='DR') Digital Read
                        option(value='AW') Analog Write
                        option(value='AR') Analog Read



            .form-row.align-items-center
                .form-group.col-auto.func-dw.func-group
                    label.custom-control.custom-checkbox.mb-2.mr-sm-2.mb-sm-0
                        input.function-dw-invert.custom-control-input(type='checkbox')
                        span.custom-control-indicator
                        span.custom-control-description Invert

                .form-group.col-auto.func-dw.func-group
                    select.function-dw-type.custom-select.mb-2.mr-sm-2.mb-sm-0
                        option(value='switch' selected) Switch
                        option(value='button') Push button
                        option(value="tmr") Timer button


            .form-row.align-items-center
                .col-12
                    span.pull-right
                        input(type="button" value="Cancel").btn-cancel.btn.btn-secondary
                        span &nbsp;
                        input(type="button" value="Save").btn-save.btn.btn-primary

script.template-collapsecard(type="text/x-custom-template")
    .col-lg-6
        .card.collapse-card
            .card-header(data-toggle='collapse' data-target="#{id}")
                h4 {title}
                small.text-muted {subtitle}
            .card-body-wrapper.collapse(id="{id}")

                ul.list-group.list-group-flush.card-content-list

script.template-devicecard(type="text/x-custom-template")
    .col-lg-6
        .card.collapse-card.devicecard.card-primary
            .card-header(data-toggle='collapse' data-target="#{id}")
                h4 {title}
                small.text-muted.text-uppercase {online} - ID: {deviceid}
            .card-body-wrapper.collapse.show(id="{id}")

                // The actual functions of the device
                ul.list-group.list-group-flush

                .card-block
                    .card-body.clearfix
                        .pull-right.clearfix
                            button.btn-delete-device.small.btn.btn-outline-danger Delete device
                            span &nbsp;
                            button.btn-add-function.small.btn.btn-outline-primary Add function

        br


